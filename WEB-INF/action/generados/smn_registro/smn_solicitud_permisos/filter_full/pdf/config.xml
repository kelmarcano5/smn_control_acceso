<?xml version='1.0' encoding='ISO-8859-1'?>
<config nodb="true">

	<summary>
		Generar reporte generico PDF
	</summary>

	<log>false</log>

	<transaction>
		<classname>dinamica.GenericTransaction</classname>
		<validator>false</validator>
		<transaction>false</transaction>
		<jdbc-log>false</jdbc-log>
		<recordset id="query-smnsolicitudpermisos.sql" source="session" scope="transaction" />
		<recordset id="filter.params" source="session" scope="transaction" />
	</transaction>

	<output>
		<classname>dinamica.PDFGenericReport</classname>
	</output>
	
	<pdf-title>${lbl:b_requests_permissions}</pdf-title>
	<pdf-logo url='/images/logo-dinamica.png' scale='100' />

	<pdf-report pageSize="letter" rotate="false">
		<record recordset='filter.params' title='Filtro de Búsqueda' noFilterMsg='-- Sin filtro de búsqueda --' width='55' spacingBefore='15'>
			<col name='spe_categoria_justif_rf' title='${lbl:b_activity_category}'  format='######' align='center' />
		</record>
		<table recordset='query-smnsolicitudpermisos.sql' width='100' spacingBefore='10'>
			<col name='smn_personal_id_combo' title='${lbl:b_personal}' width='9' align='left' format='######' />
			<col name='spe_documento_rf_combo' title='${lbl:b_documento}' width='9' align='left' format='######' />
			<col name='spe_categoria_justif_rf_combo' title='${lbl:b_activity_category}' width='9' align='left' format='######' />
			<col name='spe_fecha_desde' title='${lbl:b_inicial_date}' width='9' align='left' format='dd-MM-yyyy' />
			<col name='spe_fecha_hasta' title='${lbl:b_end_date}' width='9' align='left' format='dd-MM-yyyy' />
			<col name='spe_cantidad_horas' title='${lbl:b_nro_horas}' width='9' align='left' format='#,###,##0.00' />
			<col name='spe_estatus_rf_combo' title='${lbl:b_status}' width='9' align='left' />
			<col name='spe_jefe_inmediato_rf_combo' title='${lbl:b_direct_boss}' width='9' align='left' format='######' />
			<col name='spe_detalles' title='${lbl:b_details}' width='9' align='left' />
			<col name='spe_causa' title='${lbl:b_cause_not_approved}' width='9' align='left' />
			<col name='spe_fecha_registro' title='${lbl:b_store_date}' width='9' align='left' format='dd-MM-yyyy' />
		</table>

	</pdf-report>
</config>